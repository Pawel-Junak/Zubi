{% extends  '::base.html.twig' %}

{% block sidebartitle %} Profil użytkownika {% endblock %}

{% block sidebaritems %}
              <li><a href="{{ path('ZubiUserBundle_homepage') }}">Dane użytkownika</a></li>  
              <li><a href="{{ path('ZubiUserBundle_private') }}">Ustawienia prywatności</a></li>
              <li><a href="{{ path('ZubiUserBundle_edituser') }}">Edytuj konto</a></li>
              <li class="active"><a href="#">Lista</a></li>
              
{% endblock %}

{% block body %}
<h3> Lista zarejestrowanych użytkowników</h3>
<br>
	<table class="table">
		<thead>
			<tr>
    			<th>użytkownik</th>
    			<th>miasto</th>
    			<th>kraj</th>
          <th>data ur</th>
    		</tr>
    	</thead>
    {% for user in users %}
    {% if user.osobaprezentacja != 0 %}
		<tbody>
			<tr>/
    			<td>{{ user.username }}</td>
    			<td>{% if user.miastoprezentacja != 0 %}{{ user.miasto }}{% endif %}</td>
    			<td>{% if user.krajprezentacja != 0 %}{{ user.kraj }}{% endif %}</td>
          <td>{% if user.data_urprezentacja != 0 %}{{ user.data_ur|date("d/m/Y") }}{% endif %}</td>
    		</tr>
    	</tbody>
    {% endif %}
    {% endfor %}
    </table>
{% endblock %}