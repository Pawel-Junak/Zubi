{% extends  '::base.html.twig' %}

{% block sidebartitle %} Admin {% endblock %}

{% block sidebaritems %}
              <li><a href="{{ path('ZubiAdminBundle_homepage') }}">main</a></li>  
              <li class="active"><a href="#">Lista</a></li>
              
{% endblock %}

{% block body %}
<h3> Lista zarejestrowanych użytkowników</h3>
<br>
	<table class="table">
		<thead>
			<tr>
    			<th>użytkownik</th>
    			<th>miasto</th>
    			<th>kraj</th>
          <th>data ur</th>
          <th>opcje</th>
          <th>admin</th>
    		</tr>
    	</thead>
    {% for user in users %}
		<tbody>
			<tr>
    			<td>{{ user.username }}</td>
    			<td>{{ user.miasto }}</td>
    			<td>{{ user.kraj }}</td>
          <td>{{ user.data_ur|date("d/m/Y") }}</td>
          <td> 
            <a href="{{ path('ZubiUserBundle_delete',  { 'id': user.id }) }}">skasuj</a>
            //
            <a href="{{ path('ZubiAdminBundle_edituser', { 'id': user.id }) }}">edytuj</a>
          </td>
          <td>
            {% if user.idstatus == 1 %}
            <a href="{{ path('ZubiAdminBundle_status',  { 'id': user.id }) }}">wylacz</a>
            {% else %}
            <a href="{{ path('ZubiAdminBundle_status',  { 'id': user.id }) }}">wlacz</a>
            {% endif %}
          </td>
    		</tr>
    	</tbody>
    {% endfor %}
    </table>
{% endblock %}